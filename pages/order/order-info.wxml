<van-tabs active="{{ active }}" bind:change="onChange">
  <van-tab title="代付款">
  <view class="cu-card"  wx:for="{{prePaymentList}}" wx:for-index="id" wx:for-item="item" wx:key="key">
 <view class="cu-item shadow">
 <view class="cu-list menu-avatar">

<van-card
  thumb="{{item.imgUrl}}"
>
  <view slot="title">
  <view  class="title">
  <view> {{item.title}}</view>
  <view><text style="color:#d92027">代付款</text></view>
  </view>
  </view>

<view slot="desc">
<view style=" margin-top: 45rpx;">
 <view><text class="text-color">总价: ¥{{item.price}}</text></view>
 <view><text class="text-color">下单时间: {{item.paTime}}</text></view>
</view>
</view>

  <view slot="footer">
    <van-button size="small" round plain type="info" bind:click="desPay" data-item="{{item}}">去支付</van-button>   
  </view>
</van-card>



</view>
</view>
</view>
  
  </van-tab>



  
  <van-tab title="已完成">
  
 <view class="cu-card"  wx:for="{{prePaymentList}}" wx:for-index="id" wx:for-item="item" wx:key="key">
 <view class="cu-item shadow">
 <view class="cu-list menu-avatar">

<van-card
 thumb="{{item.imgUrl}}"
>
<view slot="title">
  <view  class="title">
  <view> {{item.title}}</view>
  <view><text class="text-color">交易完成</text></view>
  </view>
  </view>

  
<view slot="desc">
<view style=" margin-top: 45rpx;">
 <view><text class="text-color">总价: ¥{{item.price}}</text></view>
 <view><text class="text-color">下单时间: {{item.paTime}}</text></view>
</view>
</view>
</van-card>
  


</view>
</view>
</view>
  
  
  
  </van-tab>
</van-tabs>